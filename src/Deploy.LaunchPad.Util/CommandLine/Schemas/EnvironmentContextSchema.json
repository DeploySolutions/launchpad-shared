{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.deploy.solutions/schemas/launchpad/commandline/EnvironmentContextSchema.json",
  "type": "object",
  "properties": {
    "environment": {
      "type": "string",
      "enum": [ "Development", "Staging", "Production" ]
    },
    "region": { "type": "string" },
    "apiEndpoint": {
      "type": "string",
      "format": "uri"
    },
    "featureFlags": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    },
    "version": { "type": "string" }
  },
  "required": [ "environment" ],
  "additionalProperties": false
}